<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0BB605"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="1200px"
            android:fontFamily="sans-serif-condensed-light"
            android:gravity="clip_horizontal|center|clip_vertical|top"
            android:text='Olá. Este app foi desenvolvido para, através de uma série de perguntas, definir o seu perfil como investidor. A metodologia utilizada foi adaptada a partir do questionário do Banco Paulista. Insira seu nome abaixo e pressione "CONTINUAR" para iniciar o teste.'
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#FFFFFF"
            android:textSize="80px" />

        <EditText
            android:id="@+id/PersonName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:ems="10"
            android:hint="Nome"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/continueButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:text="@string/continuar" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>